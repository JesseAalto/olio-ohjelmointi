<Window x:Class="Harjoitus19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Choose a floor (1-6):"/>
            <TextBox x:Name="floorInput" Margin="0 10 0 10" Width="100"/>
            <Button x:Name="goButton" Content="Go" Width="75" Click="GoButton_Click"/>
            <TextBlock x:Name="resultText" Margin="0 10 0 0" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
